		            android:textColor="#ffccccc6"
		            android:textSize="12sp" />
				<TextView
		            android:id="@+id/emailTextView"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:padding="3dp"
		            android:text="37991927@qq.com"
		            android:textColor="#ffccccc6"
		            android:textSize="12sp" />
		    </LinearLayout>
