            layout="@layout/menu_item_mypublish" />
        
        <include
            android:id="@+id/myCalendarBtnLayout"
            layout="@layout/menu_item_mycalendar" />
		<include
		    android:visibility="gone"
            android:id="@+id/myBrowserBtnLayout"
