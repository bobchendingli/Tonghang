<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:orientation="horizontal" 
    android:gravity="center"
    android:background="@drawable/bar_top">
   
    <Button
        android:id="@+id/btn_title_left"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_left_button"
        android:text="返回"
        android:layout_marginLeft="7px"
        android:lines="1"
        android:textSize="12sp"
        android:textColor="#ffffffff"
        android:gravity="center_vertical"
        />
     <TextView 
        android:id="@+id/tv_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toptitle"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textStyle="bold"
        android:lines="1"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textColor="#ffffffff"/>
    <Button
        android:id="@+id/btn_title_right"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/top_right_button"
        
        android:text=""
        android:lines="1"
        android:textSize="12sp"
        android:textColor="#ffffffff"
        android:gravity="center"/>

</LinearLayout>